<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginVertical="6dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_person"
                    app:civ_border_width="3dp"
                    android:layout_marginEnd="12dp"
                    app:civ_border_color="@color/primary_variant"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tv_food_name"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nama_makanan"
                        />
                    <TextView
                        android:id="@+id/nama_user"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nama_lengkap"
                        />
                </LinearLayout>
                <TextView
                    android:fontFamily="@font/poppins_medium"
                    android:id="@+id/food_status"
                    android:textColor="@color/primary_variant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tersedia"
                    android:textAlignment="viewEnd"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_food_image"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:contentDescription="@string/image_post"
                android:src="@color/primary_variant"/>

            <TextView
                android:paddingVertical="8dp"
                android:fontFamily="@font/poppins_light"
                android:textSize="12sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:layout_marginHorizontal="12dp"
                android:id="@+id/tv_food_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deskripsi_postingan"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>