<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_variant"
    android:orientation="horizontal"
    tools:context=".ui.detail.DetailActivity">
    <LinearLayout
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_opacity"
        android:gravity="center"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="loading.json"
            app:lottie_loop="true" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <FrameLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">
                <ImageView
                    android:id="@+id/img_food"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@color/grey"
                    android:contentDescription="@string/foto_makanan" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@color/primary_opacity"
                    />
                <ImageView
                    android:contentDescription="@string/back_button"
                    android:id="@+id/iv_back"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="8dp"
                    android:padding="0dp"
                    android:src="@drawable/ic_back"
                    app:tint="@color/white" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="165dp"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_profile_user"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@color/white"
                        app:civ_border_width="3dp"
                        app:civ_border_color="@color/primary_variant"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/tv_food_name"
                            android:textColor="@color/color_accent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nama_makanan"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="24sp"
                            android:layout_marginStart="12dp"
                            />
                        <TextView
                            android:id="@+id/tv_food_owner"
                            android:textColor="@color/color_accent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nama_lengkap"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="18sp"
                            android:layout_marginTop="-8dp"
                            android:layout_marginStart="12dp"
                            />
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch_berbagi"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/status_berbagi"
                            android:textColor="@color/white"
                            android:layout_marginStart="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
            <RelativeLayout
                android:layout_below="@id/header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="24dp"
                android:padding="12dp"
                >
                <include android:visibility="gone" android:id="@+id/close_request" layout="@layout/view_close_request" />
                <include android:visibility="gone" android:id="@+id/waiting_response" layout="@layout/view_waiting_response" />
                <include android:visibility="gone"  android:id="@+id/not_request_yet" layout="@layout/view_not_request" />
                <include android:visibility="gone" android:id="@+id/owner_side" layout="@layout/view_owner_side" />
                <include android:visibility="gone" android:id="@+id/recipient_side" layout="@layout/view_recipient_side" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>