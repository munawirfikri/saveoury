<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_variant"
    android:layout_height="match_parent"
    tools:context=".ui.main.profile.ProfileFragment">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:paddingVertical="30dp"
        android:orientation="vertical">
    <include android:id="@+id/profile" layout="@layout/content_profile" />
        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="@string/nama_lengkap"
            android:layout_marginTop="14dp"
            />
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:text="@string/email"
            />
        <TextView
            android:id="@+id/tv_edit_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="@string/klik_disini_untuk_ubah_profil"
            />
        <Button
            android:id="@+id/btn_keluar"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="150dp"
            android:backgroundTint="#800000"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="@string/keluar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/riwayat"
        android:layout_marginTop="12dp"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="@font/poppins"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="@string/riwayat"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/riwayat"
        >
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_kosong"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/masih_kosong"
            android:fontFamily="@font/poppins"
            />
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shimmer_auto_start="true">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <include layout="@layout/item_my_post_placeholder" />
                    <include layout="@layout/item_my_post_placeholder" />
                    <include layout="@layout/item_my_post_placeholder" />
                    <include layout="@layout/item_my_post_placeholder" />
                </LinearLayout>
            </ScrollView>
        </com.facebook.shimmer.ShimmerFrameLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_my_food"
            android:layout_marginBottom="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:listitem="@layout/item_my_post"/>
    </LinearLayout>
    </ScrollView>

    <include android:visibility="gone" android:id="@+id/edit_profile" layout="@layout/view_edit_profile" />
</RelativeLayout>